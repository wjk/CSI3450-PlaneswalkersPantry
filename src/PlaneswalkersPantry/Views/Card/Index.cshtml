@{
    ViewData["Title"] = "Search";
}

@model PlaneswalkersPantry.Models.ViewModels.CardSearchModel

<h1>Search for Cards</h1>

<form asp-action="Search" asp-controller="Card" method="post" class="form-block">
    <div class="form-block-content">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" type="text"></input>
    </div>

    <div class="form-block-footer">
        <button type="submit" class="btn btn-primary" asp-action="Search" asp-controller="Card">Search</button>
    </div>
</form>
